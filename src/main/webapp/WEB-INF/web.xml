<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">

    <display-name>masterdetail</display-name>
    
    <welcome-file-list>
        <welcome-file>/JSP/employees/viewEmployees.jsp</welcome-file>
    </welcome-file-list>
    

    <!-- Define servlet mappings -->
    <servlet>
        <servlet-name>DepartmentServlet</servlet-name>
        <servlet-class>org.bibalex.Servlet.DepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentServlet</servlet-name>
        <url-pattern>/DepartmentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>org.bibalex.Servlet.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/EmployeeServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SectionServlet</servlet-name>
        <servlet-class>org.bibalex.Servlet.SectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SectionServlet</servlet-name>
        <url-pattern>/SectionServlet</url-pattern>
    </servlet-mapping>

</web-app>
